<div>
  <div class="container" id="main">
    <h1 class="header" >{{survey.title}}</h1>
    <p>{{survey.description}}</p>
    <div class="container" align="center">
	
      <p><div class="divTable Tabla">
		<div class="divTableRow">
			<div class="divTableCell corner"></div>
			<div class="divTableCell d-none d-sm-table-cell" >Yo</div>
		</div>
		{{#each survey.options}}	                                
		<div class="divTableRow">
			
			<div class="divTableCell">{{day}} {{start}} {{end}}</div>
			
			<div class="divTableCell">
				<select class="custom-select">
					<option value="NS">Elige</option>
					<option value="Y">Sí</option>
					<option value="N">No</option>
					<option value="NS">Podría ser</option>
				</select>
			</div>		
		</div>
		{{/each}}
	  </div></p>
	  <button class="btn btn-light" id="submit" >{{i18n 'Vote'}}</button>
	  <a href="#votes?id={{survey.id}}" type="button" class="btn btn-light">{{i18n 'Go Back'}}</a>
    </div>
</div>